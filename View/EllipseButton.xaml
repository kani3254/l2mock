<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="EllipseButton" TargetType="{x:Type Button}">
        <Setter Property="MinHeight" Value="30"></Setter>
        <Setter Property="MinWidth" Value="30"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Margin="2">
                        <Ellipse Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                        <Ellipse Stroke="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                        <ContentPresenter Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>